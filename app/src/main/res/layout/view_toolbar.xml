<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp" app:cardCornerRadius="0dp"
                                    app:cardElevation="@dimen/card_elevation">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/logo_green"
                android:layout_alignParentStart="true" android:layout_centerVertical="true"
                android:id="@+id/imageView" android:paddingTop="4dp" android:paddingBottom="2dp"
                android:contentDescription="@string/description_logo"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>