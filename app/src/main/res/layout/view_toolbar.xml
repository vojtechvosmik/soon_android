<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp" app:cardCornerRadius="0dp"
                                    app:cardElevation="@dimen/card_elevation">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/logo_green"
                android:layout_alignParentStart="true" android:layout_centerVertical="true"
                android:id="@+id/img_logo" android:paddingTop="5dp" android:paddingBottom="3dp"
                android:contentDescription="@string/description_logo"/>
        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp" app:srcCompat="@drawable/ic_left_arrow"
                android:layout_alignParentStart="true" android:layout_centerVertical="true"
                android:id="@+id/img_back" android:tint="@color/gray_darker" android:clickable="true"
                android:focusable="true" android:padding="@dimen/margin_large"
                android:contentDescription="@string/description_back" android:visibility="invisible"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>