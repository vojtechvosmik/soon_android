<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MainActivity" android:background="@color/white">

    <include android:layout_width="wrap_content" android:layout_height="60dp" layout="@layout/view_toolbar"
             android:layout_centerHorizontal="true" android:layout_alignParentTop="true" android:id="@+id/toolbar"/>
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_centerHorizontal="true"
            android:layout_below="@+id/toolbar" android:id="@+id/fragment_container">

    </FrameLayout>
</RelativeLayout>