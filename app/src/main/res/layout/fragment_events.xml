<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recycler_events"/>

    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" app:fabSize="normal" android:layout_marginTop="@dimen/margin_large"
            android:layout_marginStart="@dimen/margin_large" android:layout_marginEnd="@dimen/margin_large"
            android:layout_marginBottom="@dimen/margin_large" app:backgroundTint="@color/green_main"
            android:id="@+id/fab_add_event" android:tint="@color/white" android:src="@drawable/ic_add"
    />

</RelativeLayout>