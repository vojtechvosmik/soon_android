<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/white_main">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:id="@+id/img_photo"
                android:contentDescription="@string/description_event_photo"
                app:srcCompat="@color/blue_main"/>
        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/ic_add_circle"
                android:layout_centerInParent="true"
                android:contentDescription="@string/description_add"
                android:tint="@color/white_main"/>
    </RelativeLayout>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:autofillHints="false"
            android:id="@+id/edittxt_title"
            tools:ignore="UnusedAttribute"
            android:hint="@string/hint_title" android:layout_marginTop="@dimen/margin_large"
            android:fontFamily="@font/poppins_light"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:autofillHints="false"
            tools:ignore="UnusedAttribute"
            android:id="@+id/edittxt_date"
            android:hint="@string/hint_date" android:layout_marginTop="@dimen/margin_large"
            android:fontFamily="@font/poppins_light"/>
</LinearLayout>